// create new reading list
.positionel.modal(data-positionel-type='modal' data-positionel-name='create-new-reading-list' data-active='false' data-load-spinner='false' data-animation='fade' data-pointer-position='none' data-position='fixed' data-delay-hide='false' data-show-event='click' data-static='false' data-has-defined-class='true' data-child-positionel='false' data-width='md' data-form='true' data-hide-form-after-submit='true')
    .overlay
    .positionel-container.modal-container.container-100
        // header
        header.modal-header
            p.h-3.h-d Create a new list
            button.btn-icon.positionel-closebtn
                i.fa.fa-times(aria-hidden='true')
        footer.modal-footer
            .spinner.hide
            // first-content
            .positionel-content.mg-b-lw-all(data-active='true' data-first-content='create-new-shoplist')
                form.form(data-error='false' onsubmit='return false;' data-clear-inputs-when-hide='true' data-url='users/me/readingList' data-method='post' data-submit-automatic='true' data-data='')
