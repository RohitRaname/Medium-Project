                        input(type='text' name='name' placeholder='Give it a name' data-input='' maxlength='60' value='')
                        .form-count
                            span(data-value='') 0
                            | /60
                        .form-error
                            i.fa.fa-exclamation-circle(aria-hidden='true')
                            p Name is required
                    .form-group(data-error='false' data-required='true' data-count-field='true')
                        input(type='text' name='description' placeholder='Description' data-input='' maxlength='200' value='')
                        .form-count
                            span(data-value='') 0
                            | /200
                        .form-error
                            i.fa.fa-exclamation-circle(aria-hidden='true')
                            p Name is required
                    .form-group(data-type='checkbox' data-required='false' data-error='false')
                        input.hidden(type='text' name='private' data-input='' value='')
                        p.mg-lw.f-lw
                            button.btn-checkbox(data-active='false')
                                i.fa.fa-check(aria-hidden='true')
                            |                     Make it private
                    // learn more tooltip
                    // modal-btns
                    .form-btns.f-jc
                        button.btn-outline(data-action='cancel')
                            | Cancel
                        button.btn-primary-light.btn-disabled(data-action='submit')
                            | Create List
